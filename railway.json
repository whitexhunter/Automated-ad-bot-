{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && apt-get update && apt-get install -y chromium chromium-driver",
    "nixpacksConfig": {
      "aptPackages": ["chromium", "chromium-driver", "wget", "unzip"]
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python bot.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": null
  }
}
